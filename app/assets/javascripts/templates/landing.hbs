<div class="container" id="landing">
  <div class="row" id="landing-image">
    <div class="col-md-8 hidden-xs">
      <img src="/assets/leaf_med.jpg" class="img-responsive">
    </div>
    <div class="col-md-4" id="local-form">
      <h1>
        <strong>Sproutify</strong> connects you to locally grown food.
      </h1>
      <h3>
        Who is growing food near you?
      </h3>
      <form accept-charset="UTF-8" action="/" method="post" role="form" class="form-inline">
        <div class="input-group">
          <input class="form-control" id="location" name="landing[location]" placeholder="Address, City, or Zip" size="30" type="text">
          <span class="input-group-btn">
            <button class="btn btn-primary" id="submit" name="commit" type="submit">Find</button>
          </span>
        </div>
      </form>
      <div class="user_count">
      </div>
      <div class="available">
      </div>
      <div class="demanded">
      </div>
      <div id="local-info" style="display:none">
      </div>

      <input id="hidden_lat" type="hidden">
      <input id="hidden_lng" type="hidden">
    </div>
  </div>

</div>
